<%- include('../partials/header') %>
	<h2>Upcoming flights</h2>
	<table>
		<thead>
			<tr>
				<th>Airline</th>
				<th>Airport</th>
				<th>Flight Number</th>
				<th>Departure Date</th>
				<th>Details</th>
			</tr>
		</thead>
		<tbody>
			<% flights.forEach(function(f) { %>
				<tr>
					<td><%= f.airline %></td>
					<td><%= f.airport %></td>
					<td><%= f.flightNo %></td>
					<td><%= f.departs %></td>
					<td><a id="details" href="/flights/<%= f._id %>">Details</a></td>
				</tr>
				<% }) %>
		</tbody>
	</table>
	<a href="/">Back</a>

<%- include('../partials/footer') %>